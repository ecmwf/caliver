Package: caliver
Type: Package
Title: Calibration and Verification of Gridded Model Outputs
Version: 2.0.2
Authors@R: c(person("Francesca", "Di Giuseppe", 
                    email = "francesca.digiuseppe@ecmwf.int",
                    role = c("ctb", "cre"),
                    comment = c(ORCID = "0000-0001-9829-0429")),
